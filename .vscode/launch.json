  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Django container",
      "type": "python",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      // Debug server will be forwarded from Docker
      "port": 5000,
      "host": "127.0.0.1"
    }
  ]
}
